<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCharacterActivity">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/new_character_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Character Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/new_character_resonance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Character Resonance"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        app:layout_constraintTop_toBottomOf="@id/new_character_name"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_new_character"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_character_resonance"
        android:layout_marginTop="10dp"
        android:background="@color/purple_500"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:text="SAVE"/>

</androidx.constraintlayout.widget.ConstraintLayout>